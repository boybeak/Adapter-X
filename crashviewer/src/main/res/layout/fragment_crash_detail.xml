<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:text="@string/app_version"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{crash.app_version}"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:text="@string/studio"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{crash.studio_name}"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:text="@string/admin"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{crash.nameWithRole}"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:text="@string/manufacturer_model"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{crash.manufacturerAndModel}"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:text="@string/incermental"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{crash.incermental}"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:text="@string/sdk"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{crash.sdk()}"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:text="@string/crash_time"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_weight="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{crash.crash_time}"
                    />
            </TableRow>
        </TableLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"
            android:text="@{crash.causeBy}"
            android:layout_marginTop="8dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="@{crash.formattedCrashInfo()}"
            android:layout_marginTop="8dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>
